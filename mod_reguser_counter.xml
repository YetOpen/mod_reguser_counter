	<authorUrl>www.htaccess.nl</authorUrl> 
	<version>1.0</version> 
	<description><![CDATA[
	<b>Hello world, hello Counter</b>
 ]]></description>
	<files>
		<filename module="mod_reguser_counter">mod_reguser_counter.php</filename>
		<filename>index.html</filename>
		<filename>counter_style.css</filename>
		<filename>js/reguser_counter.js</filename>
	</files>

	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="speed" type="text" default="50" label="Speed in m/s" description="Speed in miliseconds" />
                <field name="posttext" type="textarea" default="Registered users" label="Text" description="Short text" cols="30" rows="4" />
            </fieldset>
        </fields>
	</config>
	
</extension>
